# Core application URLs
PUBLIC_URL=http://localhost:3000
STORAGE_URL=http://localhost:9000/resumes

# Database
DATABASE_URL=postgresql://resume_forge:resume_forge@postgres:5432/resume_forge?schema=public

# Authentication secrets (change for production)
ACCESS_TOKEN_SECRET=change-me-access-token
REFRESH_TOKEN_SECRET=change-me-refresh-token

# Headless Chrome (Browserless)
CHROME_URL=ws://browserless:3000
CHROME_TOKEN=browserless-secret
CHROME_IGNORE_HTTPS_ERRORS=false

# Mailer (MailHog for development)
MAIL_FROM=Resume Forge <noreply@example.com>
SMTP_URL=smtp://mail:1025

# Object storage (MinIO defaults)
STORAGE_BUCKET=resumes
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_USE_SSL=false
STORAGE_SKIP_BUCKET_CHECK=false

# Optional feature flags
DISABLE_SIGNUPS=false
DISABLE_EMAIL_AUTH=false

# Docker image override (optional)
# RESUME_FORGE_IMAGE=ghcr.io/your-account/resume-forge:latest

# NX Cloud (optional - enables remote caching during Docker builds)
# NX_CLOUD_ACCESS_TOKEN=
